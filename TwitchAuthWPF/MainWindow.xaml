<Window x:Class="TwitchAuthWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchAuthWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="533.778" Width="522.759" DataContext="{Binding ElementName=MainWindow}" >
    <Grid>
        <WebBrowser x:Name="myBrowser" HorizontalAlignment="Left" Height="430" Margin="29,19,0,0" VerticalAlignment="Top" Width="462"/>
        <Button x:Name="button" Content="Authorize Me" HorizontalAlignment="Left" Margin="29,465,0,0" VerticalAlignment="Top" Width="88" Click="button_Click"/>
        <TextBox x:Name="textBox" x:FieldModifier="public" HorizontalAlignment="Left" Height="23" Margin="162,462,0,0" TextWrapping="Wrap" Text="{Binding Path=textBoxContent}" VerticalAlignment="Top" Width="329"/>

    </Grid>
</Window>
